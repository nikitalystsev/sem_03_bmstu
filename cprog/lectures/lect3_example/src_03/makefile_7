# Слайды 27, 28

# Компилятор
CC := gcc

# Опции компиляции
CFLAGS := -std=c99 -Wall -Werror -pedantic

# Общие объектные файлы
OBJS := hello.o bye.o

debug : CFLAGS += -g3
debug : greeting.exe

release : CFLAGS += -DNDEBUG -g0
release : greeting.exe

greeting.exe : $(OBJS) main.o
	$(CC) $^ -o $@

test_greeting.exe : $(OBJS) test.o
	$(CC) $^ -o $@

%.o : %.c *.h
	$(CC) $(CFLAGS) -c $<

.PHONY : clean debug release
clean :
	$(RM) *.o *.exe
